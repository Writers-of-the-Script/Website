---
import { Image } from "astro:assets";

interface Props {
    src: Promise<{ default: ImageMetadata }>;
}

const { src } = Astro.props;
---

<div class="border-1 p-3 border-[rgba(255,255,255,0.2)]">
    <Image src={(await src).default} alt="Image" />

    <caption>
        <div class="italic font-bold">
            <slot />
        </div>
    </caption>
</div>
